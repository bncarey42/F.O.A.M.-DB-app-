<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>InitRoster</servlet-name>
        <servlet-class>servlets.InitRosterServlet</servlet-class>
        <init-param>
            <description>Virtual path to the roster file</description>
            <param-name>rosterPath</param-name>
            <param-value>/WEB-INF/roster/roster.dat</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ModifyAthleteServlet</servlet-name>
        <servlet-class>servlets.ModifyAthleteServlet</servlet-class>
        <init-param>
            <param-name>rosterPath</param-name>
            <param-value>/WEB-INF/roster/roster.dat</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitRoster</servlet-name>
        <url-pattern>/initRoster</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyAthleteServlet</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>initRoster</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>jdbc:mysql://localhost:3306/foam?zeroDateTimeBehavior=convertToNull</description>
        <res-ref-name>FoamDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <resource-ref>
        <description>jdbc:derby://localhost:1527/foam</description>
        <res-ref-name>FoamDB_Derby</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <resource-ref>
        <description>jdbc:mysql://localhost:3306/foam?zeroDateTimeBehavior=convertToNull</description>
        <res-ref-name>FOAM</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <resource-ref>
        <description>jdbc:mysql://localhost:3306/foam?zeroDateTimeBehavior=convertToNull</description>
        <res-ref-name>foamDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <resource-ref>
        <description>jdbc:mysql://localhost:3306/foam?zeroDateTimeBehavior=convertToNull</description>
        <res-ref-name>foam</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
